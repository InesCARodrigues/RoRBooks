<div class="row">
	<div class="col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3">
		<div class="well">

			<%= simple_form_for @post, :html => { :multipart => true} do |f| %>
				<%= select_tag(:category_id,options_for_select(@categories), :prompt => "Escolha a categoria: ")
				%>

				<%= f.file_field :post_image %>

				<%= f.input :title, label: "Job title:" %>
				<%= f.input :description %>
				<%= f.input :autor %>
				<%= f.button :submit, class: 'btn btn-primary btn-lg btn-block' %>
			<% end %>

		</div>
	</div>	
</div>



